<Window x:Class="activity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:activity"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="1000">

    <!-- Define Button Style for Rounded Corners -->
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#6EACDA"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10" Padding="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="#E2E2B6">
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="400"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="800"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!-- Upper Section -->
        <Rectangle Grid.ColumnSpan="3" Fill="#03346E"/>
        <TextBox Name="TBSearch" HorizontalAlignment="Left" Margin="230,0,0,0" TextWrapping="Wrap" 
         VerticalAlignment="Center" Width="366" Height="30" Grid.Column="1">
            <TextBox.Style>
                <Style TargetType="TextBox">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TextBox">
                                <Border CornerRadius="10" Background="White" BorderBrush="Gray" BorderThickness="1" Padding="5">
                                    <ScrollViewer x:Name="PART_ContentHost"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TextBox.Style>
        </TextBox>
        <Button Name="BTSearch" Content="Search" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="636,0,0,0" Height="30" Width="88" Click="BTSearch_Click" Grid.Column="1"/>
        <ComboBox Name="CBDropDown" HorizontalAlignment="Left" Margin="50,0,0,0" VerticalAlignment="Center" Width="130" Height="30" SelectedIndex="0" BorderBrush="#FFFF6CF3" Grid.Column="1">
            <ComboBox.Background>
                <LinearGradientBrush EndPoint="0,1">
                    <GradientStop Color="#FFF0F0F0"/>
                    <GradientStop Color="Red" Offset="1"/>
                </LinearGradientBrush>
            </ComboBox.Background>
        </ComboBox>

        <!-- Lower Section -->
        <Rectangle HorizontalAlignment="Center" Margin="0,21,0,-24" Stroke="#dbdbdb" Fill="#03346E" Width="762" Grid.Row="1" Grid.Column="1"/>
        <DataGrid Name="Suggestion" Margin="44,40,405,-7" AutoGenerateColumns="True" Grid.Row="1" Background="#E2E2B6" Foreground="Black" FontWeight="Bold" FontFamily="Arial Rounded MT Bold" Grid.Column="1"/>
        <DataGrid Name="Data" Margin="413,40,40,-7" AutoGenerateColumns="True" Grid.Row="1" Background="#E2E2B6" Foreground="Black" FontWeight="Bold" FontFamily="Arial Rounded MT Bold" Grid.Column="1"/>

        <!-- Buttons with Rounded Corners -->

        <Button Name="BTUpload" Content="Upload" Width="80" Height="30" Click="BTUpload_Click" Grid.Column="2" Margin="10,32,10,338" Grid.Row="1"/>
        <Button Name="BTPrint" Content="Print" Width="80" Height="30" Click="BTPrint_Click" Grid.Column="2" Margin="10,67,10,303" Grid.Row="1"/>
        <Button Name="BTClear" Content="Clear" Width="80" Height="30" Click="BTClear_Click" Grid.Column="2" Margin="10,102,10,268" Grid.Row="1"/>
        <Button x:Name="BTClose" Content="Close" Width="80" Height="30" Click="BTClose_Click" Grid.Column="2" Margin="10,137,10,233" Grid.Row="1"/>

    </Grid>
</Window>
