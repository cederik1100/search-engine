<Window x:Class="activity.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:activity"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="326"/>
        </Grid.RowDefinitions>


        <Rectangle HorizontalAlignment="Center"  Stroke="#f0f0f0" Fill="#f0f0f0" VerticalAlignment="Top" Height="80" Width="800" />
        <ComboBox Name="CBDropDown" HorizontalAlignment="Left" Margin="30,25,0,0" VerticalAlignment="Top" Width="100" Height="25" />
        <TextBox Name ="TBSearch" HorizontalAlignment="Left" Margin="130,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="372" Height="25"/>
        <Button Name ="BTSearch" Content="Search" HorizontalAlignment="Right"  VerticalAlignment="Top" Margin="0,25,243,0" Height="25" Width="55" Background="#3371ff" Foreground="#ffffff" Click="BTSearch_Click"/>
        <Button Name ="BTUpload" Content="Upload File" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="645,22,0,0" Click="BTUpload_Click"/>

        <!--Display Form-->
        <Rectangle HorizontalAlignment="Center" Height="326" Margin="0,10,0,0" Stroke="#dbdbdb" VerticalAlignment="Top" Width="780" Grid.Row="1" />
        <TextBlock Name="TBCompanyName" HorizontalAlignment="Left" Margin="31,37,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Company Name:" VerticalAlignment="Top" Width="100"/>
        <TextBlock Name="TBSecurityNo" HorizontalAlignment="Left" Margin="31,72,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Security No. :" VerticalAlignment="Top" Width="100"/>
        <TextBlock Name="TBDateRegistered" HorizontalAlignment="Center" Margin="0,37,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Date Registered :" VerticalAlignment="Top" Width="100"/>
        <TextBlock Name="TBLicenseNo" HorizontalAlignment="Center" Margin="0,72,0,0" Grid.Row="1" TextWrapping="Wrap" Text="License No.  :" VerticalAlignment="Top" Width="100"/>
        <TextBlock Name="TBViolation" HorizontalAlignment="Left" Margin="31,108,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Violation :" VerticalAlignment="Top" Width="100"/>
        <TextBlock Name="TxtCompanyName" HorizontalAlignment="Left" Margin="130,37,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="173"/>
        <TextBlock Name="TxtSecurityNo" HorizontalAlignment="Left" Margin="130,72,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="173"/>
        <TextBlock Name="TxtDateRegistered" HorizontalAlignment="Left" Margin="466,37,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="174"/>
        <TextBlock Name="TxtLicenseNo" HorizontalAlignment="Left" Margin="466,72,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="173"/>
        <TextBlock Name="TxtViolation" HorizontalAlignment="Left" Margin="130,108,0,0" Grid.Row="1" TextWrapping="Wrap" VerticalAlignment="Top" Width="172" Height="16"/>
        <DataGrid Name="MyDataGrid" Margin="28,153,28,-3" AutoGenerateColumns="True" Grid.Row="1" />






    </Grid>
</Window>
